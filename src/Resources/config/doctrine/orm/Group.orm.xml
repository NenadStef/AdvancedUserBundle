<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Advanced\UserBundle\Entity\Group">

        <field name="name" column="name" length="256" unique="true" >
            <options>
                <option name="charset">%advanced_user.table_options.charset%</option>
                <option name="collation">%advanced_user.table_options.collation%</option>
            </options>
        </field>

        <unique-constraints>
            <unique-constraint columns="name" name="name_UNIQUE" />
        </unique-constraints>

        <options>
            <option name="charset">%advanced_user.table_options.charset%</option>
            <option name="collation">%advanced_user.table_options.collation%</option>
        </options>

    </mapped-superclass>

</doctrine-mapping>